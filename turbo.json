{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["BETTER_AUTH_SECRET","DATABASE_URL","NEXT_PUBLIC_APP_URL","BETTER_AUTH_URL","NODE_ENV","RESEND_API_KEY","GOOGLE_CLIENT_ID","GOOGLE_CLIENT_SECRET","REFERRAL_PROGRAM_CLIENT_ID","REFERRAL_PROGRAM_CLIENT_SECRET","NEXT_PUBLIC_REFREF_PROJECT_ID","NEXT_PUBLIC_REFREF_PROGRAM_ID"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
